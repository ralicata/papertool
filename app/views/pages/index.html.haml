.container.form-size
  .row.justify-content-center
    .col-md-4
      %h1 Generate printable paper
      %br/
      %h3 Choose your design
      = form_tag(pages_page_pdf_path, class: "form my-2 my-lg-0") do
        = select_tag 'tp', raw('<option>squares</option><option>lines</option><option>dots</option>'), class: "form-control"
        = text_field_tag 'sq', nil, class: "form-control mr-sm-2", placeholder: "Enter mm (default: 10)"
        %br/
        %h3 Header
        = text_field_tag 'h1', nil, class: "form-control mr-sm-2", placeholder: "Enter title (Date:)"
        = text_field_tag 'body', nil, class: "form-control mr-sm-2", placeholder: "Enter body (page nÂ°)"
        = hidden_field_tag :format, :pdf
        %br/
        %button.btn.btn-outline-success.my-2.my-sm-0{ :type => "submit" } Generate
